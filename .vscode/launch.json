{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jekyll Server",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "kill-jekyll",
            "runtimeExecutable": "docker",
            "runtimeArgs": [
                "run",
                "--rm",
                "--name=jekyll-server",
                "--network=host",
                "-v",
                "${workspaceFolder}:/site",
                "jekyll-engrafo",
                "bundle",
                "exec",
                "jekyll",
                "serve",
                "--host",
                "127.0.0.1",
                "--livereload"
            ],
            "console": "integratedTerminal"
        }
    ]
}
